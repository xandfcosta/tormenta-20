// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  output   = "client"
}

datasource db {
  provider = "sqlite"
}

model Character {
  id Int @id @default(autoincrement())

  // Identity
  name        String
  player      String
  origin      String
  races       Json
  classes     Json
  divinity    String?
  description String  @default("")
  notes       String  @default("")

  // Progression
  level           Int    @default(1)
  experience      Int    @default(0)
  size            String @default("MÃ©dio")
  movement        Int    @default(9)
  defense         Int    @default(0)
  magicResistence Int    @default(10)

  // Core stats
  hp          Int                  @default(0)
  hpMax       Int                  @default(0)
  mp          Int                  @default(0)
  mpMax       Int                  @default(0)
  condition   String               @default("alive")
  attributes  Attributes?
  expertisies ExpertiseCharacter[]

  // Relations
  inventory Inventory?
  abilities Ability[]
  effects   Effect[]

  disable   Boolean  @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Attributes {
  characterId Int @id

  strength     Int @default(0)
  dexterity    Int @default(0)
  constitution Int @default(0)
  intelligence Int @default(0)
  wisdom       Int @default(0)
  charisma     Int @default(0)

  character Character @relation(fields: [characterId], references: [id])
}

model Expertise {
  id        Int    @id @default(autoincrement())
  name      String
  attribute String

  characterLink ExpertiseCharacter[]
}

model ExpertiseCharacter {
  characterId Int
  expertiseId Int

  value      Int     @default(0)
  trained    Boolean @default(false)
  trainBonus Int     @default(0)

  character Character @relation(fields: [characterId], references: [id])
  expertise Expertise @relation(fields: [expertiseId], references: [id])

  @@id([characterId, expertiseId])
}

model Inventory {
  characterId Int @id

  limit   Int @default(0)
  tibares Int @default(0)

  items InventoryItem[]

  character Character @relation(fields: [characterId], references: [id])
}

model InventoryItem {
  id          Int @id @default(autoincrement())
  inventoryId Int

  type        String
  name        String
  description String

  quantity Int
  slot     Int

  isEquippable Boolean
  equipped     Boolean
  passive      Boolean

  modifiers ItemModifier[]
  attacks   ItemAttack[]
  inventory Inventory      @relation(fields: [inventoryId], references: [characterId])
}

model ItemModifier {
  itemId     Int
  modifierId Int

  item     InventoryItem @relation(fields: [itemId], references: [id])
  modifier Modifier      @relation(fields: [modifierId], references: [id])

  @@id([itemId, modifierId])
}

model ItemAttack {
  itemId   Int
  attackId Int

  item   InventoryItem @relation(fields: [itemId], references: [id])
  attack Attack        @relation(fields: [attackId], references: [id])

  @@id([itemId, attackId])
}

model Ability {
  id          Int @id @default(autoincrement())
  characterId Int

  type        String
  name        String
  description String

  passive  Boolean
  manaCost Int

  character Character         @relation(fields: [characterId], references: [id])
  modifiers AbilityModifier[]
  attacks   AbilityAttack[]
}

model AbilityModifier {
  abilityId  Int
  modifierId Int

  ability  Ability  @relation(fields: [abilityId], references: [id])
  modifier Modifier @relation(fields: [modifierId], references: [id])

  @@id([abilityId, modifierId])
}

model AbilityAttack {
  abilityId Int
  attackId  Int

  ability Ability @relation(fields: [abilityId], references: [id])
  attack  Attack  @relation(fields: [attackId], references: [id])

  @@id([abilityId, attackId])
}

model Effect {
  id          Int @id @default(autoincrement())
  characterId Int

  sourceType String
  sourceId   Int?
  sourceName String

  active   Boolean
  duration Json
  stacks   Int

  startedAt DateTime

  character Character        @relation(fields: [characterId], references: [id])
  modifiers EffectModifier[]
}

model EffectModifier {
  effectId   Int
  modifierId Int

  effect   Effect   @relation(fields: [effectId], references: [id])
  modifier Modifier @relation(fields: [modifierId], references: [id])

  @@id([effectId, modifierId])
}

model Modifier {
  id Int @id @default(autoincrement())

  target Json
  value  Int
  type   String

  effects   EffectModifier[]
  abilities AbilityModifier[]
  items     ItemModifier[]
}

model Attack {
  id Int @id @default(autoincrement())

  category   String
  attackRoll Json
  damage     Json
  critical   Json

  items   ItemAttack[]
  ability AbilityAttack[]
}
